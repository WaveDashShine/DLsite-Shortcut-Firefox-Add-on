{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.0",

  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/WaveDashShine/DLsite-Shortcut-WebExtension",
  "icons": {
    "16": "icons/DL-16.png",
    "32": "icons/DL-32.png",
    "48": "icon.png"
  },

  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab",
    "http://*/",
    "https://*/"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/DL-16.png",
      "32": "icons/DL-32.png",
      "48": "icon.png"
    },
    "default_title": "__MSG_extensionName__",
    "default_popup": "menu/menu.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "default_locale": "en"

}